void mainTimerFunction() {
  Serial.println(millis());
}

void minorTimerFunction() {
  switch (state.getState()) {
    case stateWaiting:
      lights[lightDebug].toggle();
      break;
    case stateRunning:
      // Do nothing.
      break;
  }
}

void timeoutTimerFunction() {
  switch (state.getState()) {
    case stateWaiting:
      // Do nothing.
      break;
    case stateRunning:
      state.startWaiting();
      break;
  }
}

